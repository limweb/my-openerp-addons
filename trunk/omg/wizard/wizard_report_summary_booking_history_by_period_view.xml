<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_wizard_ineco_booking_history_report_summary_by_period" model="ir.ui.view">
            <field name="name">Booking History Summary By Period Report</field>
            <field name="model">wizard.ineco.booking.history.report.period.summary</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            	<form string="Booking History Summary By Period Report">
                     <group col="8">
                        <group colspan="8">
                            <group colspan="8" states="choose">
                                <separator colspan="8" string="Booking History Summary By Period Report"/>
                                <field name="period_id" colspan="4" nolabel="1"/>
                                <field name="category_id" colspan="4" nolabel="1"/>
                                <field name="chain_id"/>
                                <field invisible="1" name="state"/>
                            </group>
                            <group colspan="8" states="get">
                                <separator string="Report Exporting" colspan="8"/>
                                <field name="name" invisible="1" colspan="8"/>
                                <field name="report" nolabel="1" readonly="1" fieldname="name" colspan="8"/>
                            </group>
                        </group>
                        <group colspan="8" col="8" states="choose">
                            <separator string="" colspan="8"/>
                            <label colspan="6" width="220"/>
                            <button icon="gtk-cancel" name="act_cancel" special="cancel" string="_Close" type="object"/>
                            <button icon="gtk-ok" name="create_report" string="_Print" type="object"/>
                        </group>
                        <group colspan="8" col="8" states="get">
                            <separator string="" colspan="8"/>
                            <label colspan="7" width="220"/>
                            <button icon="gtk-close" name="act_destroy" special="cancel" string="_Close" type="object"/>
                        </group>
                    </group>            	
            	</form>
            </field>
        </record>

        <record id="action_wizard_ineco_booking_history_report_summary_period" model="ir.actions.act_window">
            <field name="name">Booking History Summary By Period Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.ineco.booking.history.report.period.summary</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            name="Booking History Report"
            parent="base.next_id_64"
            action="action_wizard_ineco_booking_history_report_summary_period"
            id="menu_wizard_ineco_booking_history_report_summary_period"
            groups="base.group_user"
            icon="STOCK_PRINT" />

    </data>
</openerp>